<!-- Easy PvP Toggle v1.0.0 -->
<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">

	<Script file = "EasyPvPToggle.lua" />

	<!-- Main Frame -->
	<Frame name="eptFrame" frameStrata="BACKGROUND" movable="true" clampedToScreen="true" parent="UIParent">
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="3" right="3" top="3" bottom="3" />
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32" />
			</TileSize>
			<EdgeSize>
				<AbsValue val="16" />
			</EdgeSize>
			<!-- Color -->
		</Backdrop>
		<Size x="40" y="40" />
		<Anchors>
			<Anchor point="CENTER" relativePoint="CENTER" relativeTo="UIParent" />
		</Anchors>

		<!-- Toggle Button -->
		<Frames>
			<CheckButton name="$parentButtonToggle" parentKey="buttonToggle">
				<Size x="24" y="24" />
				<Anchors>
					<Anchor point="CENTER" relativePoint="CENTER" relativeTo="$parent" />
				</Anchors>
				<Scripts>
					<OnClick>
						eptPvPToggle();
					</OnClick>
					<OnEnter>
						GameTooltip:SetOwner(self, "ANCHOR_TOPRIGHT");
						eptMouseOverEnter();
					</OnEnter>
					<OnLeave>
						eptMouseOverLeave();
					</OnLeave>
				</Scripts>
				<HighlightTexture file="Interface\Buttons\UI-Common-MouseHilight" alphaMode="ADD" />
			</CheckButton>
		</Frames>

		<Scripts>
			<OnLoad>
				self:RegisterForDrag("LeftButton");
			</OnLoad>
			<OnDragStart>
				self:StartMoving();
			</OnDragStart>
			<OnDragStop>
				self:StopMovingOrSizing();
			</OnDragStop>
			<OnEnter>
				eptMouseOverEnter();
			</OnEnter>
			<OnLeave>
				eptMouseOverLeave();
			</OnLeave>
		</Scripts>

	</Frame>

</Ui>